generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(uuid())
  name      String
  lastName  String
  email     String    @unique
  avatarURL String?
  dni       String
  address   String?
  phone     String
  password  String
  role      UserRole  @default(USER)
  refreshToken String?
  status    Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  sales    Sale[]
  movement InventoryMovement[]
}

enum UserRole {
  ADMIN
  USER
}

//
// CUSTOMERS
//
model Customer {
  id        String   @id @default(uuid())
  name      String
  lastName  String?
  avatarURL String?
  ruc      String?  @unique
  phone     String?
  email     String?  @unique
  address   String?
  status    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime  @updatedAt

  sales    Sale[]
}

//
// CATEGORIAS
//
model Category {
  id          String        @id @default(uuid())
  name        String
  description String?
  status      Boolean    @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime  @updatedAt

  products   Product[]
}

//
// PRODUCTOS
//
model Product {
  id            String       @id @default(uuid())
  name          String
  description   String?
  avatarURL     String?
  purchasePrice Float
  salePrice     Float
  stock         Int        @default(0)
  unitMeasure   UnitMeasure
  status        Boolean    @default(true)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  categoryId   String
  category     Category  @relation(fields: [categoryId], references: [id])

  detailSale  DetailSale[]
  movements    InventoryMovement[]
}

enum UnitMeasure {
  unit
  piece
  pack
  six_pack
  dozen
  box
  bag
  bundle
  display

  g
  kg
  mg
  lb

  ml
  l
  gal

  bulk
  scoop
  portion

  roll
  sheet
  set
  pair

  bottle
  can
  cup
  jar
}


//
// VENTAS
//
model Sale {
  id             String              @id @default(uuid())
  saleTotal      Float               @default(0)
  paymentMethod  PaymentMethod
  documentType   DocumentType
  documentNumber String        @unique 
  userId         String?
  customerId     String?
  status         StatusSale           @default(PENDING)
  createdAt      DateTime  @default(now())

  user           User?             @relation(fields: [userId], references: [id])
  customer       Customer?        @relation(fields: [customerId], references: [id])
  detail         DetailSale[]
  invoice        SunatInvoice?

  @@index([createdAt])
  @@index([documentType])
}

enum PaymentMethod {
  CASH
  CARD
  YAPE
  PLIN
  TRANSFER
}

enum DocumentType {
  BOLETA
  FACTURA
}

enum StatusSale {
  PENDING    // Venta creada, a√∫n no pagada
  PAID       // Pagada
  CANCELLED  // Cancelada
}

model DocumentSeries {
  id           String        @id @default(uuid())
  documentType DocumentType  @unique
  prefix       String        // F001, B001
  lastNumber   Int           @default(0)
  updatedAt    DateTime      @updatedAt
}


model DetailSale {
  id         Int      @id @default(autoincrement())
  quantity   Int
  price     Float
  subtotal   Float

  saleId    String
  productId String

  sale      Sale    @relation(fields: [saleId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}




//
// INVENTARIO MOVIMIENTOS
//
model InventoryMovement {
  id          String            @id @default(uuid())
  type        MovementType
  quantity    Int
  description String?
  userId      String
  productId   String
  createdAt   DateTime  @default(now())

  user       User           @relation(fields: [userId], references: [id])
  product   Product       @relation(fields: [productId], references: [id])

  @@index([productId])
  @@index([createdAt])
}

enum MovementType {
  IN
  OUT
  ADJUSTMENT
}

//
// SUNAT COMPROBANTES (NUBEFACT / EFACT / OSE)
//
model SunatInvoice {
  id           String      @id @default(uuid())
  saleId       String      @unique
  serie        String
  sequence     Int
  xml          String?
  cdr          String?
  pdf          String?
  statusSunat  SunatStatus @default(PENDING)
  hashFirma    String?
  createdAt DateTime @default(now())
  sale        Sale    @relation(fields: [saleId], references: [id])
}

enum SunatStatus {
  PENDING
  ACCEPTED
  OBSERVED
  REJECTED
}